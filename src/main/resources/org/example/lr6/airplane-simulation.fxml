<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.Pane?>

<BorderPane fx:id="root" xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.lr6.AirplaneSimulationController">
    <center>
        <Pane fx:id="airplanePane" prefHeight="600.0" prefWidth="800.0" />
    </center>
    <bottom>
        <HBox spacing="10" alignment="center">
            <Button fx:id="startButton" text="Старт" onAction="#handleStart"/>
            <Button fx:id="stopButton" text="Стоп" onAction="#handleStop"/>
        </HBox>
    </bottom>
</BorderPane>
